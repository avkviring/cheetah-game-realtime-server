.main {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin: 0;
    padding: 0;
}

.query {
    padding: 0;
    margin: 0;
    min-height: 30px;
    max-height: 30px;
}

.info {
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    margin-top: 14px;
}

.objects {
    min-width: 630px;
    max-width: 630px;
}

.right-panel {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    margin-left: 14px;
}

.fields {
    flex-grow: 1;
}

.item-block {
    display: flex;
    flex-direction: row;
}

.item-caption {
    -unity-font-style: bold;
}

.h1 {
    font-size: 13px;
    -unity-font-style: bold;
    margin-top: 14px;
    margin-bottom: 7px;
}

